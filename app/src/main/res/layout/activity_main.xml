<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/targetImage"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/loadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="cargarFoto"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/targetImage"
        app:layout_constraintStart_toStartOf="@+id/targetImage"
        app:layout_constraintTop_toBottomOf="@+id/targetImage"
        tools:text="Cargar foto" />

    <Button
        android:id="@+id/botonCompartir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="compartirImagen"
        android:text="Compartir"
        app:layout_constraintEnd_toEndOf="@+id/loadImage"
        app:layout_constraintStart_toStartOf="@+id/loadImage"
        app:layout_constraintTop_toBottomOf="@+id/loadImage" />
</androidx.constraintlayout.widget.ConstraintLayout>